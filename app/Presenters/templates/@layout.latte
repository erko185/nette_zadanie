        <div id="content">

            <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">

            </nav>

            <div class="container-fluid">

                <div class="row">
                    <div class="col-md-12">
                        <div n:foreach="$flashes as $flash" n:class="flash, $flash->type">{$flash->message}</div>
                    </div>
                </div>


                {include content}

